{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "./llm-gateway" : {
            "enablePresidio" : true,
            "enableRedis" : true,
            "enableLangfuse" : true,
            "startWithDefaults": true
        },
        "ghcr.io/deloitte-us-engineering/engacc-devcontainer-features/ollama:latest": {
            "models": "phi3,nomic-embed-text",
            "maxLoadedModels": "2"
        }
    },
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-python.python",
                "ms-toolsai.jupyter",
                "redhat.vscode-yaml",
                "GitHub.copilot",
                "eamodio.gitlens"
            ]
        }
    },
    "postStartCommand": "nohup bash -c '.devcontainer/postStart.sh &'",
    "portsAttributes": {
        "3000": {"label": "Langfuse"},
        "4000": {"label": "LiteLLM"},
        "5001": {"label": "Presidio Analyzer"},
        "5002": {"label": "Presidio Anonymizer"},
        "5432": {"label": "Postgresql"},
        "6379": {"label": "Redis-stack"}
    }
}
